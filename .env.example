# STARMINT Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Server port (default: 5000)
PORT=5000

# Node environment (development/production)
NODE_ENV=development

# ===========================================
# DATABASE (Auto-provisioned by Replit)
# ===========================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# SECURITY (Required)
# ===========================================

# JWT secret for authentication tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-here

# Game state encryption key
# Generate with: openssl rand -base64 32
GAME_ENCRYPTION_KEY=your-game-encryption-key-here

# Session secret
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# ===========================================
# FARCASTER / NEYNAR (Optional)
# ===========================================

# Neynar API key for Farcaster integration
NEYNAR_API_KEY=your-neynar-api-key

# ===========================================
# NFT SMART CONTRACT (For Deployment)
# ===========================================

# Deployed contract address on Base mainnet
# Update after deploying your contract
VITE_SCORE_NFT_CONTRACT_ADDRESS=0xE6729F7BCefc2d45da01C0b9FB10Ac2f644FBF1e

# ===========================================
# SMART CONTRACT DEPLOYMENT (Foundry)
# ===========================================

# Deployer wallet private key (with 0x prefix)
# NEVER commit this to version control!
DEPLOYER_PRIVATE_KEY=0x...

# BaseScan API key for contract verification
BASESCAN_API_KEY=your-basescan-api-key

# External URL for NFT metadata links
EXTERNAL_BASE_URL=https://your-app-url.com

# Authorized minter address (for access control)
# This address can mint NFTs on behalf of players
AUTHORIZED_MINTER=0x...

# Minter private key (for backend signature generation)
# Used by the backend to sign mint authorization requests
MINTER_PRIVATE_KEY=0x...

# ===========================================
# WALLET CONNECT (Optional)
# ===========================================

# WalletConnect project ID
VITE_WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id
